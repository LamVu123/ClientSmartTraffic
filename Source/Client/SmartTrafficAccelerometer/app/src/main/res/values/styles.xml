<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/wet_asphalt</item>
    </style>
    <style name="white_text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFF</item>
    </style>
    <style name="black_text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000</item>
    </style>

    <style name="MyButtonColor" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">#fff</item>
        <item name="colorAccent">@color/wet_asphalt</item>
    </style>

</resources>