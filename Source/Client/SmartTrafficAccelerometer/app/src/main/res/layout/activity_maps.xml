<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_change_road"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintLeft_toLeftOf="parent"
            map:layout_constraintRight_toLeftOf="@+id/btn_tool"
            map:layout_constraintBottom_toBottomOf="parent"
            style="@style/white_text"
            android:background="@drawable/maps_button"
            android:text="@string/btn_change_road" />

        <Button
            android:id="@+id/btn_tool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            map:layout_constraintTop_toTopOf="parent"
            map:layout_constraintLeft_toRightOf="@+id/btn_change_road"
            map:layout_constraintRight_toRightOf="parent"
            map:layout_constraintBottom_toBottomOf="parent"
            style="@style/white_text"
            android:background="@drawable/maps_button"
            android:enabled="false"
            android:text="@string/btn_tool"
            android:visibility="visible" />
    </android.support.constraint.ConstraintLayout>

    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />
</LinearLayout>
